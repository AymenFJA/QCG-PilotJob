[
	{
		"request": "submit",
		"jobs": [
		{
			"name": "sleep-iter_${it}",
			"iterate": [ 1, 6 ],
			"execution": {
			  "exec": "/bin/echo",
			  "args": [ "iteration ${it}" ],
			  "wd": "sleep-iter.${it}",
			  "stdout": "sleep-iter.stdout",
			  "stderr": "sleep-iter.stderr"
			},
			"resources": {
			  "numCores": {
					"min": 1,
                    "max": 4,
					"scheduler": "maximum-iters"
			  }
			}
		}
		]
	},
	{
		"request": "control",
		"command": "finishAfterAllTasksDone"
	}
]
